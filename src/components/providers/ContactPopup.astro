---
interface Props {
  providerName: string;
  phone: string;
  email?: string;
  phone24hr?: string;
}

const { providerName, phone, email, phone24hr } = Astro.props;
---

<dialog id="contact-popup" class="rounded-lg shadow-xl p-0 max-w-md w-full backdrop:bg-black/50">
  <div class="p-6">
    <div class="flex justify-between items-start mb-4">
      <h2 class="text-xl font-bold text-gray-900">Schedule an Appointment</h2>
      <button
        id="close-contact-popup"
        class="text-gray-400 hover:text-gray-600 transition-colors p-1"
        aria-label="Close dialog"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <p class="text-gray-600 mb-6">
      To schedule an appointment with <strong>{providerName}</strong>, please contact them directly:
    </p>

    <div class="space-y-4">
      <!-- Phone -->
      <div class="flex items-start space-x-3">
        <svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <div>
          <p class="text-sm font-medium text-gray-700">Phone</p>
          <a href={`tel:${phone}`} class="text-primary-600 hover:text-primary-700 font-semibold text-lg">
            {phone}
          </a>
        </div>
      </div>

      {/* 24hr line */}
      {phone24hr && (
        <div class="flex items-start space-x-3">
          <svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <p class="text-sm font-medium text-gray-700">24/7 Line</p>
            <a href={`tel:${phone24hr}`} class="text-primary-600 hover:text-primary-700 font-semibold">
              {phone24hr}
            </a>
          </div>
        </div>
      )}

      {/* Email */}
      {email && (
        <div class="flex items-start space-x-3">
          <svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <div>
            <p class="text-sm font-medium text-gray-700">Email</p>
            <a href={`mailto:${email}`} class="text-primary-600 hover:text-primary-700 font-semibold">
              {email}
            </a>
          </div>
        </div>
      )}
    </div>

    <div class="mt-6 space-y-3">
      <a href={`tel:${phone}`} class="btn-primary w-full text-center block">
        Call Now
      </a>
      <button
        id="close-contact-popup-btn"
        class="btn-outline w-full text-center"
      >
        Close
      </button>
    </div>
  </div>
</dialog>

<script>
  const dialog = document.getElementById('contact-popup') as HTMLDialogElement;
  const closeBtn = document.getElementById('close-contact-popup');
  const closeBtnBottom = document.getElementById('close-contact-popup-btn');
  const openBtns = document.querySelectorAll('[data-open-contact-popup]');

  openBtns.forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      dialog?.showModal();
    });
  });

  closeBtn?.addEventListener('click', () => dialog?.close());
  closeBtnBottom?.addEventListener('click', () => dialog?.close());

  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) {
      dialog.close();
    }
  });
</script>
