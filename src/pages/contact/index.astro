---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/ui/Header.astro';
import Footer from '../../components/ui/Footer.astro';

const title = "Contact Us";
const description = "Get in touch with the Middlesex, Somerset & Hunterdon Ryan White Program for HIV care, support services, and resources across Central New Jersey.";
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main id="main-content" class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            Contact Us
          </h1>
          <p class="text-xl lg:text-2xl text-gray-700 mb-8">
            We're here to help you access the care and support you need
          </p>
          <p class="text-lg text-gray-600">
            Reach out to us for information about services, support, or to get connected with care.
          </p>
        </div>
      </div>
    </section>

    <!-- Emergency Contacts -->
    <section class="py-12 bg-error-50 border-y border-error-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-error-900 mb-4">Need Immediate Help?</h2>
          <p class="text-error-800">Crisis support and emergency resources available 24/7</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <a href="tel:988" class="emergency-button text-center flex flex-col items-center space-y-2">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <div>
              <div class="font-bold">Crisis Support</div>
              <div>Call 988</div>
            </div>
          </a>
          
          <a href="tel:911" class="emergency-button text-center flex flex-col items-center space-y-2">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            <div>
              <div class="font-bold">Medical Emergency</div>
              <div>Call 911</div>
            </div>
          </a>
          
          <a href="tel:18004484663" class="btn-primary text-center flex flex-col items-center space-y-2">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <div class="font-bold">HIV/AIDS Hotline</div>
              <div>1-800-HIV-INFO</div>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Main Contact Information -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Get in Touch</h2>
            
            <div class="space-y-8">
              <!-- Planning Council Contact -->
              <div class="bg-primary-50 rounded-lg p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Planning Council</h3>
                <div class="space-y-3">
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <div>
                      <p class="font-medium text-gray-900">Jennifer Pypiak</p>
                      <p class="text-gray-600">MSHTGA Planning Council Support</p>
                    </div>
                  </div>
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <a href="mailto:mshtga.planning.council.fcc@gmail.com" class="text-primary-600 hover:text-primary-700">
                      mshtga.planning.council.fcc@gmail.com
                    </a>
                  </div>
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <a href="tel:8482026131" class="text-primary-600 hover:text-primary-700">
                      (848) 202-6131
                    </a>
                  </div>
                  <p class="text-sm text-gray-600 mt-3">
                    Planning Council meetings are open to the public. Contact Jennifer for meeting schedules and information.
                  </p>
                </div>
              </div>

              <!-- Service Areas -->
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Service Areas</h3>
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                  <div class="text-center p-4 bg-stone-50 rounded-lg">
                    <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      </svg>
                    </div>
                    <h4 class="font-semibold text-gray-900">Middlesex County</h4>
                    <p class="text-sm text-gray-600">New Brunswick, Perth Amboy, Edison, Woodbridge</p>
                  </div>
                  
                  <div class="text-center p-4 bg-stone-50 rounded-lg">
                    <div class="w-12 h-12 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      </svg>
                    </div>
                    <h4 class="font-semibold text-gray-900">Somerset County</h4>
                    <p class="text-sm text-gray-600">Somerville, Franklin Township, Bridgewater</p>
                  </div>
                  
                  <div class="text-center p-4 bg-stone-50 rounded-lg">
                    <div class="w-12 h-12 bg-success-100 rounded-full flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      </svg>
                    </div>
                    <h4 class="font-semibold text-gray-900">Hunterdon County</h4>
                    <p class="text-sm text-gray-600">Flemington, Clinton, Lambertville</p>
                  </div>
                </div>
              </div>

              <!-- Quick Links -->
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Quick Access</h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <a href="/find-services" class="flex items-center space-x-3 p-4 bg-stone-50 rounded-lg hover:bg-gray-100 transition-colors">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <span class="font-medium text-gray-900">Find Services</span>
                  </a>
                  
                  <a href="/get-tested" class="flex items-center space-x-3 p-4 bg-stone-50 rounded-lg hover:bg-gray-100 transition-colors">
                    <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span class="font-medium text-gray-900">Get Tested</span>
                  </a>
                  
                  <a href="/treatment-care" class="flex items-center space-x-3 p-4 bg-stone-50 rounded-lg hover:bg-gray-100 transition-colors">
                    <svg class="w-6 h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    <span class="font-medium text-gray-900">Treatment & Care</span>
                  </a>
                  
                  <a href="/support-resources" class="flex items-center space-x-3 p-4 bg-stone-50 rounded-lg hover:bg-gray-100 transition-colors">
                    <svg class="w-6 h-6 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span class="font-medium text-gray-900">Support & Resources</span>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Send Us a Message</h2>
            
            <form class="space-y-6" name="contact" data-netlify="true" method="POST" action="/success">
              <input type="hidden" name="form-name" value="contact" />
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="first-name" class="form-label">First Name *</label>
                  <input type="text" id="first-name" name="first-name" required class="form-input" />
                </div>
                <div>
                  <label for="last-name" class="form-label">Last Name *</label>
                  <input type="text" id="last-name" name="last-name" required class="form-input" />
                </div>
              </div>

              <div>
                <label for="email" class="form-label">Email Address *</label>
                <input type="email" id="email" name="email" required class="form-input" />
              </div>

              <div>
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" id="phone" name="phone" class="form-input" />
              </div>

              <div>
                <label for="county" class="form-label">County</label>
                <select id="county" name="county" class="form-input">
                  <option value="">Select your county</option>
                  <option value="middlesex">Middlesex County</option>
                  <option value="somerset">Somerset County</option>
                  <option value="hunterdon">Hunterdon County</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="inquiry-type" class="form-label">How can we help you? *</label>
                <select id="inquiry-type" name="inquiry-type" required class="form-input">
                  <option value="">Select an option</option>
                  <option value="services">I need information about services</option>
                  <option value="testing">I want to get tested</option>
                  <option value="treatment">I need help with treatment</option>
                  <option value="support">I need support services</option>
                  <option value="planning-council">Planning Council information</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="form-label">Message *</label>
                <textarea id="message" name="message" rows="4" required class="form-input" placeholder="Please tell us how we can help you..."></textarea>
              </div>

              <div class="bg-stone-50 rounded-lg p-4">
                <p class="text-sm text-gray-600 mb-3">
                  <strong>Privacy Notice:</strong> Your information is confidential and protected by federal and state privacy laws. We will only use your contact information to respond to your inquiry.
                </p>
                <label class="flex items-start space-x-3">
                  <input type="checkbox" required class="mt-1 rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                  <span class="text-sm text-gray-700">I understand that my information will be kept confidential and used only to respond to my inquiry. *</span>
                </label>
              </div>

              <div>
                <button type="submit" class="btn-primary w-full">
                  Send Message
                </button>
              </div>
            </form>

            <div class="mt-8 p-4 bg-primary-50 rounded-lg">
              <p class="text-sm text-primary-800">
                <strong>Need immediate assistance?</strong> For urgent needs, please call our crisis support line at 988 or the HIV/AIDS hotline at 1-800-HIV-INFO (1-800-448-4663).
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Resources -->
    <section class="py-16 bg-stone-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Additional Resources</h2>
          <p class="text-xl text-gray-600">Important contacts and resources for HIV care and support</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Ryan White ADAP</h3>
            <p class="text-gray-600 mb-4">AIDS Drug Assistance Program for medication support</p>
            <a href="tel:18009624379" class="text-primary-600 hover:text-primary-700 font-medium">
              1-800-962-4379
            </a>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">NJ 211</h3>
            <p class="text-gray-600 mb-4">Information and referral for health and human services</p>
            <a href="tel:211" class="text-primary-600 hover:text-primary-700 font-medium">
              Dial 2-1-1
            </a>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Crisis Text Line</h3>
            <p class="text-gray-600 mb-4">24/7 crisis support via text message</p>
            <a href="sms:741741" class="text-primary-600 hover:text-primary-700 font-medium">
              Text HOME to 741741
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>