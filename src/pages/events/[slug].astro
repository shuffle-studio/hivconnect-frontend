---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { fetchEventBySlug, extractTextFromLexical } from '../../lib/api';
import type { Event } from '../../lib/api';
import EventMap from '../../components/events/EventMap';

// Define getStaticPaths for build-time static generation
export async function getStaticPaths() {
  try {
    // Fetch all published events (upcoming and past) for static generation
    const PAYLOAD_URL = import.meta.env.PUBLIC_PAYLOAD_URL || 'https://hivconnect-backend.shufflestudio.workers.dev';
    const API_BASE_URL = `${PAYLOAD_URL}/api`;

    const response = await fetch(
      `${API_BASE_URL}/events?where[status][equals]=published&limit=1000`
    );

    if (!response.ok) {
      console.error('Failed to fetch events for getStaticPaths');
      return [];
    }

    const data = await response.json();
    const events = data.docs || [];

    return events.map((event: Event) => ({
      params: { slug: event.slug },
      props: { event },
    }));
  } catch (error) {
    console.error('Error in getStaticPaths:', error);
    return [];
  }
}

// Get the event from props (passed by getStaticPaths)
const { event } = Astro.props;

// Fallback: if no event in props, try fetching (for preview/dev mode)
let finalEvent: Event | null = event || null;
let error: string | null = null;

if (!finalEvent) {
  const { slug } = Astro.params;
  try {
    finalEvent = await fetchEventBySlug(slug as string);
  } catch (e) {
    error = e instanceof Error ? e.message : 'Failed to load event';
    console.error('Error fetching event:', e);
  }
}

// If event not found, return 404
if (!finalEvent && !error) {
  return Astro.redirect('/404');
}

// Helper to format date
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric',
    year: 'numeric',
  });
}

// Helper to format time
function formatTime(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleTimeString('en-US', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true,
  });
}

// Helper to get category label
function getCategoryLabel(category: string): string {
  const labels: Record<string, string> = {
    'planning-council': 'Planning Council',
    'committee': 'Committee Meeting',
    'community': 'Community Event',
    'training': 'Training/Workshop',
    'health-fair': 'Health Fair',
    'support-group': 'Support Group',
    'other': 'Event',
  };
  return labels[category] || category;
}

// Helper to check if event is in the past
function isPastEvent(dateString: string): boolean {
  return new Date(dateString) < new Date();
}

// Meta information
const title = finalEvent ? `${finalEvent.title} | HIV Connect Central NJ` : 'Event Not Found';
const description = finalEvent ? extractTextFromLexical(finalEvent.description).substring(0, 160) : 'Event details';
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-stone-50 py-12">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <!-- Back Link -->
      <div class="mb-6">
        <a
          href="/events"
          class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Events
        </a>
      </div>

      {error && (
        <div class="rounded-lg bg-primary-50 p-6 text-primary-800">
          <p class="font-medium text-lg">Error loading event</p>
          <p class="text-sm mt-2">{error}</p>
        </div>
      )}

      {!error && finalEvent && (
        <article class="bg-white rounded-lg shadow-md overflow-hidden">
          <!-- Featured Image -->
          {finalEvent.featuredImage && (
            <div class="aspect-video overflow-hidden">
              <img
                src={finalEvent.featuredImage.url}
                alt={finalEvent.featuredImage.alt || finalEvent.title}
                class="w-full h-full object-cover"
              />
            </div>
          )}

          <!-- Content -->
          <div class="p-8">
            <!-- Category Badge & Featured -->
            <div class="flex items-center gap-2 mb-4">
              <span class="inline-flex items-center rounded-full bg-primary-100 px-3 py-1 text-sm font-medium text-primary-800">
                {getCategoryLabel(finalEvent.category)}
              </span>
              {finalEvent.featured && (
                <span class="inline-flex items-center rounded-full bg-accent-100 px-3 py-1 text-sm font-medium text-accent-800">
                  Featured
                </span>
              )}
              {isPastEvent(finalEvent.startDate) && (
                <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-700">
                  Past Event
                </span>
              )}
            </div>

            <!-- Title -->
            <h1 class="text-4xl font-bold text-gray-900 mb-6">
              {finalEvent.title}
            </h1>

            <!-- Date & Time -->
            <div class="mb-6 p-4 bg-stone-50 rounded-lg border border-gray-200">
              <div class="flex items-start">
                <svg class="w-6 h-6 mr-3 text-primary-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <div>
                  <div class="text-lg font-semibold text-gray-900">{formatDate(finalEvent.startDate)}</div>
                  <div class="text-gray-600 mt-1">
                    {formatTime(finalEvent.startDate)}
                    {finalEvent.endDate && (
                      <span> - {formatTime(finalEvent.endDate)}</span>
                    )}
                  </div>
                </div>
              </div>
            </div>

            <!-- Location -->
            <div class="mb-6 p-4 bg-stone-50 rounded-lg border border-gray-200">
              <div class="flex items-start">
                <svg class="w-6 h-6 mr-3 text-primary-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div class="flex-1">
                  {finalEvent.location.type === 'virtual' && (
                    <div>
                      <div class="text-lg font-semibold text-gray-900 mb-2">Virtual Event</div>
                      {finalEvent.location.virtualLink && (
                        <a
                          href={finalEvent.location.virtualLink}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
                        >
                          Join Virtual Meeting
                          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                        </a>
                      )}
                    </div>
                  )}

                  {finalEvent.location.type === 'in-person' && (
                    <div>
                      <div class="text-lg font-semibold text-gray-900">In-Person Event</div>
                      {finalEvent.location.venueName && (
                        <div class="text-gray-700 mt-2 font-medium">{finalEvent.location.venueName}</div>
                      )}
                      {finalEvent.location.address && (
                        <div class="text-gray-600 mt-1">
                          <div>{finalEvent.location.address}</div>
                          {(finalEvent.location.city || finalEvent.location.state || finalEvent.location.zipCode) && (
                            <div>
                              {finalEvent.location.city}{finalEvent.location.city && ', '}{finalEvent.location.state} {finalEvent.location.zipCode}
                            </div>
                          )}
                        </div>
                      )}
                    </div>
                  )}

                  {finalEvent.location.type === 'hybrid' && (
                    <div>
                      <div class="text-lg font-semibold text-gray-900 mb-3">Hybrid Event (In-Person & Virtual)</div>

                      {/* In-Person Details */}
                      {finalEvent.location.venueName && (
                        <div class="mb-3">
                          <div class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-1">In-Person</div>
                          <div class="text-gray-700 font-medium">{finalEvent.location.venueName}</div>
                          {finalEvent.location.address && (
                            <div class="text-gray-600 text-sm mt-1">
                              <div>{finalEvent.location.address}</div>
                              {(finalEvent.location.city || finalEvent.location.state || finalEvent.location.zipCode) && (
                                <div>
                                  {finalEvent.location.city}{finalEvent.location.city && ', '}{finalEvent.location.state} {finalEvent.location.zipCode}
                                </div>
                              )}
                            </div>
                          )}
                        </div>
                      )}

                      {/* Virtual Details */}
                      {finalEvent.location.virtualLink && (
                        <div>
                          <div class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-1">Virtual</div>
                          <a
                            href={finalEvent.location.virtualLink}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
                          >
                            Join Virtual Meeting
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                          </a>
                        </div>
                      )}
                    </div>
                  )}
                </div>
              </div>
            </div>

            <!-- Location Map -->
            {finalEvent.location.type !== 'virtual' && finalEvent.coordinates?.lat && finalEvent.coordinates?.lng && (
              <div class="mt-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Location Map</h3>
                <EventMap
                  client:only="react"
                  coordinates={finalEvent.coordinates}
                  eventName={finalEvent.title}
                  address={`${finalEvent.location.address || ''}, ${finalEvent.location.city || ''}, ${finalEvent.location.state || ''}`}
                />
                <p class="text-xs text-gray-500 mt-2">
                  Zoom with mouse wheel or +/- buttons. Click marker for details.
                </p>
              </div>
            )}

            <!-- Description -->
            <div class="prose prose-lg max-w-none mb-8">
              <div class="text-gray-700 leading-relaxed whitespace-pre-wrap">
                {extractTextFromLexical(finalEvent.description)}
              </div>
            </div>

            <!-- Contact Information & RSVP -->
            {(finalEvent.contactEmail || finalEvent.contactPhone || finalEvent.rsvpLink) && (
              <div class="border-t border-gray-200 pt-6 mt-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Contact & Registration</h2>

                <div class="space-y-3">
                  {finalEvent.rsvpLink && (
                    <div>
                      <a
                        href={finalEvent.rsvpLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
                      >
                        Register for Event
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      </a>
                    </div>
                  )}

                  {finalEvent.contactEmail && (
                    <div class="flex items-center text-gray-700">
                      <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <a href={`mailto:${finalEvent.contactEmail}`} class="hover:text-primary-600">
                        {finalEvent.contactEmail}
                      </a>
                    </div>
                  )}

                  {finalEvent.contactPhone && (
                    <div class="flex items-center text-gray-700">
                      <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      <a href={`tel:${finalEvent.contactPhone}`} class="hover:text-primary-600">
                        {finalEvent.contactPhone}
                      </a>
                    </div>
                  )}
                </div>
              </div>
            )}

            <!-- Tags -->
            {finalEvent.tags && finalEvent.tags.length > 0 && (
              <div class="border-t border-gray-200 pt-6 mt-6">
                <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-3">Tags</h3>
                <div class="flex flex-wrap gap-2">
                  {finalEvent.tags.map(tag => (
                    <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-700">
                      {tag.name}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </article>
      )}

      <!-- Back Link (Bottom) -->
      <div class="mt-8">
        <a
          href="/events"
          class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Events
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
