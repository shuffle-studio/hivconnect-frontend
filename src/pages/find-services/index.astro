---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/ui/Header.astro';
import Footer from '../../components/ui/Footer.astro';
import ProviderCard from '../../components/providers/ProviderCard.astro';
import ProviderSearch from '../../components/providers/ProviderSearch';
import { fetchProviders } from '../../lib/api';

const title = "Find HIV Care & Support Services";
const description = "Discover comprehensive HIV testing, treatment, and support services across Middlesex, Somerset, and Hunterdon counties in Central New Jersey.";

// Fetch providers from PayloadCMS API
const providers = await fetchProviders();
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main id="main-content" class="flex-1">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-primary-600 to-secondary-600 py-12 overflow-hidden">
      <!-- Hero Background Image -->
      <div class="absolute inset-0 opacity-30">
        <img 
          src="/HIV Treatment Website/Shutterstock Pictures/shutterstock_144206617.jpg" 
          alt="" 
          class="w-full h-full object-cover object-center"
          loading="eager"
        />
      </div>
      <!-- Strong dark overlay for white text contrast (WCAG compliance) -->
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      <!-- Additional gradient overlay for enhanced readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/40 to-black/50"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4 drop-shadow-lg">
            Find HIV Care & Support Services
          </h1>
          <p class="text-xl text-white mb-6 drop-shadow-md">
            Connect with trusted providers offering comprehensive HIV care, testing, treatment, and support services across Central New Jersey.
          </p>
          <p class="text-lg text-gray-100 drop-shadow-md">
            All services are confidential. Many are free regardless of insurance status.
          </p>
        </div>
      </div>
    </section>

    <!-- Search Interface -->
    <section class="py-8 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ProviderSearch client:load providers={providers} />
      </div>
    </section>

    <!-- Provider Directory -->
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Provider Directory</h2>
          <p class="text-lg text-gray-600">
            All providers listed are part of the Ryan White HIV/AIDS Program network, ensuring quality care and comprehensive services.
          </p>
        </div>

        <!-- Featured Providers -->
        <div class="mb-12">
          <h3 class="text-2xl font-semibold text-gray-900 mb-6">Featured Providers</h3>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {providers.filter(p => p.featured).map(provider => (
              <ProviderCard provider={provider} />
            ))}
          </div>
        </div>

        <!-- All Providers -->
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 mb-6">All Providers</h3>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {providers.map(provider => (
              <ProviderCard provider={provider} />
            ))}
          </div>
        </div>

        <!-- Emergency Resources -->
        <div class="mt-12 bg-error-50 border border-error-200 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-error-900 mb-4">Need Immediate Help?</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="tel:988" class="emergency-button text-center">
              Crisis Support: 988
            </a>
            <a href="tel:911" class="emergency-button text-center">
              Medical Emergency: 911
            </a>
            <a href="tel:18004484663" class="btn-primary text-center">
              HIV/AIDS Hotline: 1-800-HIV-INFO
            </a>
          </div>
          <p class="text-sm text-error-700 mt-4 text-center">
            Available 24/7. You matter. Help is available.
          </p>
        </div>
      </div>
    </section>

    <!-- Service Information -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Understanding HIV Services</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Learn about the different types of HIV care and support services available to help you live your healthiest life.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- HIV Testing -->
          <div class="card text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">HIV Testing</h3>
            <p class="text-gray-600 mb-4">Free, confidential testing with results in 20 minutes. Pre- and post-test counseling included.</p>
            <a href="/get-tested" class="btn-outline text-sm">Find Testing Locations</a>
          </div>

          <!-- HIV Treatment -->
          <div class="card text-center">
            <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">HIV Treatment</h3>
            <p class="text-gray-600 mb-4">Modern HIV treatment helps you live a full, healthy life. Same-day treatment initiation available.</p>
            <a href="/treatment-care" class="btn-outline text-sm">Find Treatment Centers</a>
          </div>

          <!-- Support Services -->
          <div class="card text-center">
            <div class="w-16 h-16 bg-success-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Support Services</h3>
            <p class="text-gray-600 mb-4">Case management, mental health support, housing assistance, and more comprehensive services.</p>
            <a href="/support-resources" class="btn-outline text-sm">Browse Support Services</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>