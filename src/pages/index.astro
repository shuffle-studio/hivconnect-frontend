---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import { t, getCurrentLanguage } from '../i18n/astro-utils';

// Get current language from Astro's built-in i18n
const currentLanguage = getCurrentLanguage(Astro.currentLocale);

const title = t('homepage.hero.title', currentLanguage);
const description = t('site.description', currentLanguage);
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main id="main-content" class="flex-1" role="main" aria-label="Main content">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-primary-600 to-secondary-600 py-16 lg:py-24 overflow-hidden" aria-labelledby="hero-heading">
      <!-- Hero Background Image -->
      <div class="absolute inset-0 opacity-30">
        <img 
          src="/HIV Treatment Website/Two Men Talking to Each Other.jpeg" 
          alt="" 
          class="w-full h-full object-cover object-center"
          loading="eager"
        />
      </div>
      <!-- Strong dark overlay for white text contrast (WCAG compliance) -->
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      <!-- Additional gradient overlay for enhanced readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/40 to-black/50"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <h1 id="hero-heading" class="text-4xl lg:text-6xl font-bold text-white mb-6 drop-shadow-lg" set:html={t('homepage.hero.title', currentLanguage)}></h1>
          <p class="text-xl lg:text-2xl text-white mb-8 leading-relaxed drop-shadow-md">
            {t('homepage.hero.subtitle', currentLanguage)}
          </p>
          <p class="text-lg text-gray-100 mb-10 drop-shadow-md">
            {t('homepage.hero.confidential', currentLanguage)}
          </p>
          
          <!-- Quick Action Buttons -->
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
            <a 
              href="/find-services" 
              class="btn-primary flex items-center justify-center space-x-2 min-h-[60px]"
              aria-label="Find HIV care and support services near your location"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <span>Find Care Near Me</span>
            </a>
            <a 
              href="tel:988" 
              class="emergency-button flex items-center justify-center space-x-2 min-h-[60px]"
              aria-label="Call 988 for immediate crisis support and mental health assistance"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>Talk to Someone Now</span>
            </a>
            <a 
              href="/get-tested" 
              class="btn-secondary flex items-center justify-center space-x-2 min-h-[60px]"
              aria-label="Learn about HIV testing options and find testing locations"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span>Schedule Testing</span>
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Service Categories -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            Comprehensive Care & Support
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            From testing to treatment, from housing to mental health support, 
            we connect you with the services you need across Middlesex, Somerset, and Hunterdon counties.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- HIV Testing & Prevention -->
          <div class="card text-center hover:shadow-xl transition-all duration-300 flex flex-col h-full">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Testing & Prevention</h3>
            <p class="text-gray-600 mb-4 flex-grow">Free, confidential HIV testing with results in 20 minutes. PrEP counseling and at-home testing options available.</p>
            <a href="/get-tested" class="btn-outline text-sm mt-auto">Find HIV Testing Services</a>
          </div>
          
          <!-- HIV Treatment & Medical Care -->
          <div class="card text-center hover:shadow-xl transition-all duration-300 flex flex-col h-full">
            <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Treatment & Care</h3>
            <p class="text-gray-600 mb-4 flex-grow">Expert medical care to help you live a full, healthy life. Same-day treatment initiation and telehealth options available.</p>
            <a href="/treatment-care" class="btn-outline text-sm mt-auto">Explore Treatment Options</a>
          </div>
          
          <!-- Case Management & Navigation -->
          <div class="card text-center hover:shadow-xl transition-all duration-300 flex flex-col h-full">
            <div class="w-16 h-16 bg-success-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Case Management</h3>
            <p class="text-gray-600 mb-4 flex-grow">Personal support to connect you with everything you need. Your case manager is your advocate.</p>
            <a href="/support-resources" class="btn-outline text-sm mt-auto">Find Case Management Services</a>
          </div>
          
          <!-- Support & Resources -->
          <div class="card text-center hover:shadow-xl transition-all duration-300 flex flex-col h-full">
            <div class="w-16 h-16 bg-warning-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2m-6 4h6" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Housing & Financial Support</h3>
            <p class="text-gray-600 mb-4 flex-grow">Emergency housing assistance, financial support, and benefits enrollment. Safe, stable housing is healthcare.</p>
            <a href="/support-resources" class="btn-outline text-sm mt-auto">Access Support Resources</a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Coverage Area -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            Serving Central New Jersey
          </h2>
          <p class="text-xl text-gray-600">
            HIV Connect Central NJ serves residents of Middlesex, Somerset, and Hunterdon counties
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Middlesex County</h3>
            <p class="text-gray-600">New Brunswick, Perth Amboy, Edison, Woodbridge, and surrounding communities</p>
          </div>
          
          <div class="text-center">
            <div class="w-20 h-20 bg-secondary-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Somerset County</h3>
            <p class="text-gray-600">Somerville, Franklin Township, Bridgewater, and surrounding communities</p>
          </div>
          
          <div class="text-center">
            <div class="w-20 h-20 bg-success-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Hunterdon County</h3>
            <p class="text-gray-600">Flemington, Clinton, Lambertville, and surrounding communities</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Key Messages -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
              You Belong Here
            </h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">HIV is manageable</h3>
                  <p class="text-gray-600">Modern treatment enables full, healthy lives. With proper care, people with HIV live long, healthy lives.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-secondary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-secondary-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">Your privacy matters</h3>
                  <p class="text-gray-600">All HIV-related services are strictly confidential. Your information is protected by federal and state privacy laws.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-success-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-success-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">Care is accessible</h3>
                  <p class="text-gray-600">Most services are available regardless of insurance status. Immigration status doesn't affect your ability to receive care.</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Need Help Right Now?</h3>
            <div class="space-y-4">
              <a href="tel:988" class="block w-full emergency-button text-center">
                Crisis Support: Call 988
              </a>
              <a href="tel:18004484663" class="block w-full btn-primary text-center">
                HIV/AIDS Hotline: 1-800-HIV-INFO
              </a>
              <a href="sms:741741" class="block w-full btn-secondary text-center">
                Crisis Text: Text HOME to 741741
              </a>
            </div>
            <p class="text-sm text-gray-600 mt-4 text-center">
              Available 24/7. You matter. Help is available.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
